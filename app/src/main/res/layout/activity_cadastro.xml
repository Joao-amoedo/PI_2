<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:backgroundTint="@android:color/darker_gray"
    android:gravity="center|top"
    android:orientation="vertical"
    tools:context=".Activity.CadastroActivity">

    <TextView
        android:id="@+id/textcadastroid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crie sua conta grÃ¡tis"
        android:textColor="#0E0A0A"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/idEditTextCadastroActivityNomeCompleto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_person_black_24dp"
        android:hint="Nome Completo"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/idEditTextCadastroActivityEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_email_black_24dp"
        android:hint="Email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/idEditTextCadastroActivitySenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:hint="Senha"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/idEditTextCadastroActivityConfirmarSenha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_lock_black_24dp"
        android:hint="Confirmar Senha"
        android:inputType="textPassword" />

    <TextView
        android:id="@+id/idTextViewCadastroActivityRegiao"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_add_location_black_24dp"
        android:text="Regiao"
        android:inputType="textEmailAddress" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">
        <Button
            android:id="@+id/idButtonCadastroActivityCadastrar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/colorPrimaryDark"
            android:text="Cadastrar"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
    </LinearLayout>



</LinearLayout>